<!DOCTYPE html>
<html>
  <head>
    <title>CeliacProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav>
    <% if user_signed_in? %>
      <a href="#"> <%= link_to "Home", root_path %></a>

    <a href="#"> <%= link_to "Log Out", destroy_user_session_path, method: :delete %> </a>
      <% else %>
      <a href="#"><%= link_to "Log in", new_user_session_path %> </a>
      <a href="#"><%= link_to "Sign Up", new_user_registration_path %> </a>
    <% end %> 
      </nav>
      <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
