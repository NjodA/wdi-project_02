<div>
<% if user_signed_in? %>
<% if current_user.is_admin == true %>
   <button><%= link_to "Add New Product", new_product_path, class: "links" %></button>
<% end %>
   <button><%= link_to "Cart", orders_cart_path, class: "links" %></button>
<%end %>
</div>


<div class="cards">
<% @products.each do |p| %>

<div class="card">
  <div class="card-image">
        <%= image_tag p.image %>
        </div>

         <div class="card-action">
         <%= link_to p.title, product_path(p) %>
         <strong class="card_price"> <%=  p.price %> SAR </strong>
        </div>
</div>
<% end %>
</div>

